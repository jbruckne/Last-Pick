<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="joebruckner.lastpick">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".LastPickApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.home.MovieShuffleActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.history.HistoryActivity"
            android:parentActivityName=".ui.home.MovieShuffleActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="joebruckner.lastpick.ui.home.MovieShuffleActivity" />
        </activity>

        <activity
            android:name=".ui.bookmarks.BookmarksActivity"
            android:parentActivityName=".ui.home.MovieShuffleActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="joebruckner.lastpick.ui.home.MovieShuffleActivity" />
        </activity>

        <activity android:name=".ui.about.AboutActivity" />
        <activity android:name=".ui.common.MovieActivity" />
    </application>

</manifest>
