<resources>

    <style name="AppTheme" parent="Base.AppTheme" />

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/md_indigo_300</item>
        <item name="colorPrimaryDark">@color/md_indigo_400</item>
        <item name="colorAccent">@color/md_deep_orange_A100</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:windowBackground">@color/md_grey_900</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
