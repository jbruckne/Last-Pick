<resources>

    <style name="AppTheme" parent="Base.AppTheme" >
    </style>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_grey_100</item>
        <item name="colorPrimaryDark">@color/md_grey_200</item>
        <item name="android:textColor">@color/md_grey_950</item>
        <item name="android:textColorPrimary">@color/md_grey_950</item>
        <item name="android:textColorSecondary">@color/md_grey_950</item>
        <item name="android:windowBackground">@color/md_grey_300</item>
        <item name="colorBackgroundFloating">@color/md_grey_100</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>

    <style name="AppTheme.Transparent" parent="Base.AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Transparent" parent="@android:style/TextAppearance">
        <item name="android:alpha">0</item>
        <item name="android:textColor">#00666666</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomWhiteSwitch">
        <item name="colorControlActivated">@color/md_white_1000</item>
    </style>
</resources>
