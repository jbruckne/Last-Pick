<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_card_credits"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/movie_card_top_margin"
    app:cardBackgroundColor="?attr/colorBackgroundFloating"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    tools:targetApi="N">

    <LinearLayout
        android:id="@+id/movie_layout_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/movie_label_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:text="@string/label_cast_and_crew" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/movie_list_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layoutManager="GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_actor"
            tools:layout_height="240dp" />

        <Button
            android:id="@+id/movie_more_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:textColor="?attr/colorAccent"
            android:text="@string/view_more"
            style="@style/Widget.AppCompat.Button.Borderless" />
    </LinearLayout>
</android.support.v7.widget.CardView>