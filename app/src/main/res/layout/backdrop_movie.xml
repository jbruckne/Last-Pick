<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:contentDescription="@string/backdrop"
        android:scaleType="centerCrop"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax"
        tools:background="@color/md_grey_700" />

    <RelativeLayout
        android:id="@+id/title_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:minHeight="126dp"
        android:padding="16dp"
        android:background="?attr/colorPrimary"
        tools:targetApi="lollipop">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            tools:text="Cabin in the Woods"/>

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignStart="@+id/title"
            android:textSize="@dimen/detail_text_size"
            tools:text="2015   R   141 min"
            />

        <TextView
            android:id="@+id/genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/details"
            android:layout_below="@+id/details"
            android:textSize="@dimen/detail_text_size"
            tools:text="Action, Horror, Thriller"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/poster"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="190dp"
        android:contentDescription="@string/poster"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="-0.2"
        tools:background="@color/md_white_1000"
        tools:targetApi="lollipop" />

</merge>

